@{

}
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a asp-action="Index" asp-controller="Home" class="brand-link">
        <img src="~/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">DREAM BOOK</span>
    </a>

    <div class="sidebar">

        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">Приветь, User @*@User.Identity.Name*@</a>
            </div>
        </div>

        <div class="form-inline">
            <div class="input-group" data-widget="sidebar-search">
                <input class="form-control form-control-sidebar" type="search" placeholder="Поиск ..." aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-sidebar">
                        <i class="fas fa-search fa-fw"></i>
                    </button>
                </div>
            </div>
        </div>

        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index" class="nav-link @Url.MakeActiveClass("Home","Index")">
                        <i class="nav-icon fas fa-home"></i>
                        <p>
                            Главная
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="DreamTypes" asp-action="Index" class="nav-link @Url.MakeActiveClass("DreamTypes","Index")">
                        <i class="nav-icon fas  fa-list-ul"></i>
                        <p>Категории снов</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Interpretations" asp-action="Index" class="nav-link @Url.MakeActiveClass("Interpretations","Index")">
                        <i class="nav-icon fas  fa-moon"></i>
                        <p>Сонник</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Posts" asp-action="Index" class="nav-link @Url.MakeActiveClass("Posts","Index")">
                        <i class="nav-icon fas fa-newspaper"></i>
                        <p>Посты</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="PostCategories" asp-action="Index" class="nav-link @Url.MakeActiveClass("PostCategories","Index")">
                        <i class="nav-icon fas fa-list-ul"></i>
                        <p>Категории постов</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Ads" asp-action="Index" class="nav-link @Url.MakeActiveClass("AdsCategories","Index")">
                        <i class="nav-icon fas fa-ad"></i>
                        <p>Реклама</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href='/api-docs' class="nav-link">
                        <i class="nav-icon fas fa-ad"></i>
                        <p>API</p>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</aside>
