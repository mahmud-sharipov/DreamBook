@model IEnumerable<DreamBook.Application.PostCategories.PostCategoryResponseModel>
@using DreamBook.Application.LanguageResources;
@{
    ViewData["Title"] = "Категории";
}

<div class="row">
    <div class="col-md-2">
        @await Html.PartialAsync("PartialViews/_ActionsCard", new List<(string Link, string Label, string Icon)>
        {
            (@Url.Action("Create", "PostCategories") , "Новая категория", "fa-plus"),
        })
    </div>

    <div class="col-md-10">
        <div class="card card-info card-outline">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                @ModelsLabel.PostCategoryTranslation_Name
                            </th>
                            <th style="width: 30%">
                                @ModelsLabel.PostCategoryTranslation_Description
                            </th>
                            <th style="width: auto">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var type in Model)
                        {
                            <tr>
                                <td>
                                    #
                                </td>
                                <td>
                                    @type.Name
                                </td>
                                <td>
                                    @type.Description
                                </td>
                                <td class="project-actions text-right">
                                    <a asp-controller="PostCategories" asp-action="Details" asp-route-id="@type.Guid" class="btn btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-controller="PostCategories" asp-action="Edit" asp-route-id="@type.Guid" class="btn btn-sm">
                                        <i class="fas fa-edit">
                                        </i>
                                    </a>
                                    <a asp-controller="PostCategories" asp-action="Delete" asp-route-id="@type.Guid" class="btn btn-sm">
                                        <i class="fas fa-times"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {

}

@section Styles {

}

@section BreadcrumbItems {
    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Главная</a></li>
    <li class="breadcrumb-item active">@ViewData["Title"]</li>
}

